<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="http://localhost:3000/css/admin.css">
    <script src="http://localhost:3000/js/admin.js"></script>
    <script src="http://localhost:3000/js/common.js"></script>
</head>
<body>
    <header>
        <h1 id="admin-page-header">Admin Panel</h1>
    </header>
    <div id="navigation">
        <span id="teams" class="list">Teams & Players</span>  
        <span id="logout" class="list">Log out</span>
    </div>
    <section id="teams-section" class="">
        <h1 id="teams-playing-header">Teams Playing</h1>
        <button type="button" id="add-team" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Add Team
        </button>
        <div id="teams-list">
            
        </div>
    </section>
    <section id="players-section" class="">
      <h1 id="teams-playing-header">Players</h1>
      <button type="button" id="add-player" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#playerModal">
          Add Player
      </button>
      <div id="player-list">
          
      </div>
    </section>
    <!-- Button trigger modal -->

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel"><b>Team Detail</b></h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="col">
                <span class="label"><b>Team Name</b></span>
                <input type="text" class="col-12 mb-2 p-2" name="teamname" id="teamname" placeholder="Team Name">
                <span id="teamname-error" class="error hide">*Team name is required.</span>
            </div>
            <div class="col">
                <span class="label"><b>City</b></span> 
                <input type="text" class="col-12 mb-2 p-2" name="teamcity" id="teamcity" placeholder="City Playing for">
                <span id="teamcity-error" class="error hide">*City name is required.</span>
            </div>
            <div class="col">
                <span class="label"><b>Owner</b></span>
                <input type="text" class="col-12 mb-2 p-2" name="ownername" id="ownername" placeholder="Owner Name">
                <span id="ownername-error" class="error hide">*Owner name is required.</span>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" id="save-team" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal for Player -->
  <div class="modal fade" id="playerModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel"><b>Player Detail</b></h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="col">
                <span class="label"><b>Player Name</b></span>
                <input type="text" class="col-12 mb-2 p-2" name="player" id="playerName" placeholder="Team Name">
                <span id="player-error" class="error hide">*Player name is required.</span>
            </div>
            <div class="col">
                <span class="label"><b>City</b></span> 
                <input type="text" class="col-12 mb-2 p-2" name="playerCity" id="playerCity" placeholder="City">
                <span id="playerCity-error" class="error hide">*City name is required.</span>
            </div>
            <div class="col">
                <span class="label"><b>Highest Score</b></span>
                <input type="text" class="col-12 mb-2 p-2" name="Highestscore" id="Highestscore" placeholder="Highest Score">
                <span id="Highestscore-error" class="error hide">*Highest Score is required.</span>
            </div>
            <div class="col">
              <span class="label"><b>Team playing for</b></span>
              <select class="col-12 mb-2 p-2" name="team-details" id="teamDetails">
              </select>
              <span id="Highestscore-error" class="error hide">*Highest Score is required.</span>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" id="save-player" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
</body>
</html>